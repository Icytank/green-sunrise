---
/**
 * PROJECT CARD COMPONENT
 * ====================
 * 
 * "Data Hero" card pattern for project gallery.
 * Features: Large MW capacity display, GSStamp for verified projects,
 * technical metadata (location, terrain), high-contrast styling.
 */
import { Image } from "astro:assets";
import GSStamp from "./GSStamp.astro";
import { t, translateTerrain } from "../utils/i18n-helpers";

interface Props {
  title: string;
  capacityMW: number;
  location: string;
  terrainType: string;
  heroImage: ImageMetadata;
  slug: string;
  lang: "bg" | "en";
  isVerified?: boolean;
}

const { 
  title, 
  capacityMW, 
  location, 
  terrainType, 
  heroImage, 
  slug, 
  lang, 
  isVerified = false 
} = Astro.props;

// Helper: Format Capacity Logic
const formatCapacity = (mw: number) => {
  if (mw < 1) {
    return { value: Math.round(mw * 1000), unit: 'kWp' };
  }
  return { value: parseFloat(mw.toFixed(2)), unit: 'MW' };
};

const { value: capacityValue, unit: capacityUnitLabel } = formatCapacity(capacityMW);

const url = `/${lang}/projects/${slug}`;
const terrainLabel = t('technical.terrain', lang);
const locationLabel = t('technical.location', lang);
const terrainValue = translateTerrain(terrainType, lang);
const verifiedLabel = t('technical.verifiedProject', lang);
---

<a href={url} class="project-card" aria-label={`${title} - ${capacityValue} ${capacityUnitLabel}`} data-terrain={terrainType} data-capacity={capacityMW}>
  <div class="image-wrapper">
    <Image src={heroImage} alt={title} width={800} class="card-image" />
    {isVerified && (
      <div class="stamp-wrapper" title={verifiedLabel}>
        <GSStamp size={70} />
      </div>
    )}
  </div>
  
  <div class="content">
    <!-- Data Hero: MW/kWp Capacity -->
    <div class="capacity-hero">
      <span class="capacity-value font-mono">{capacityValue}</span>
      <span class="capacity-unit font-mono">{capacityUnitLabel}</span>
    </div>
    
    <h3 class="title">{title}</h3>
    
    <!-- Technical Metadata -->
    <div class="tech-specs">
      <div class="spec-row">
        <span class="spec-label">{locationLabel}</span>
        <span class="spec-value">{location}</span>
      </div>
      <div class="spec-row">
        <span class="spec-label">{terrainLabel}</span>
        <span class="spec-value">{terrainValue}</span>
      </div>
    </div>
  </div>
</a>

<style>
  .project-card {
    display: flex;
    flex-direction: column;
    background: var(--gs-executive-white);
    border: 1px solid var(--gs-border);
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: var(--gs-text-primary);
    transition: transform 0.4s cubic-bezier(0.165, 0.84, 0.44, 1), 
                box-shadow 0.4s cubic-bezier(0.165, 0.84, 0.44, 1), 
                border-color 0.3s ease;
    height: 100%;
    position: relative;
  }

  /* Technical Authority hover state (AC7: zero-lag elevation) */
  .project-card:hover, .project-card:focus-visible {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0, 78, 59, 0.12);
    border-color: var(--gs-institutional-green);
    outline: none;
  }
  
  .project-card:focus-visible {
    box-shadow: 0 0 0 4px var(--gs-institutional-green);
  }

  .image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 16/9;
    overflow: hidden;
    background: var(--gs-slate-gray);
  }

  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.165, 0.84, 0.44, 1);
  }

  .project-card:hover .card-image {
    transform: scale(1.05);
  }

  .stamp-wrapper {
    position: absolute;
    top: var(--gs-space-3);
    right: var(--gs-space-3);
    z-index: 10;
    transition: transform 0.3s ease;
  }

  .project-card:hover .stamp-wrapper {
    transform: rotate(10deg) scale(1.1);
  }

  .content {
    padding: var(--gs-space-5);
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  /* Data Hero: Large MW Capacity (AC3, AC6) */
  .capacity-hero {
    display: flex;
    align-items: baseline;
    gap: var(--gs-space-1);
    margin-bottom: var(--gs-space-3);
  }

  .capacity-value {
    font-size: 2.75rem;
    font-weight: 700;
    color: var(--gs-institutional-green);
    line-height: 1;
    letter-spacing: -0.02em;
  }

  .capacity-unit {
    font-size: var(--gs-text-h4);
    font-weight: 600;
    color: var(--gs-slate-gray);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .font-mono {
    font-family: var(--gs-font-mono);
  }

  .title {
    font-size: var(--gs-text-h4);
    font-weight: 700;
    margin: 0 0 var(--gs-space-4) 0;
    color: var(--gs-text-primary);
    font-family: var(--gs-font-primary);
    line-height: 1.3;
  }

  /* Technical Metadata (AC4) */
  .tech-specs {
    margin-top: auto;
    display: flex;
    flex-direction: column;
    gap: var(--gs-space-2);
    padding-top: var(--gs-space-3);
    border-top: 1px solid var(--gs-border);
  }

  .spec-row {
    display: flex;
    justify-content: space-between;
    align-items: flex-start; /* Align to top for multiline text */
    gap: var(--gs-space-4);
  }

  .spec-label {
    font-size: var(--gs-text-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--gs-slate-gray);
    font-weight: 500;
    flex-shrink: 0; /* Prevent label from shrinking */
    margin-top: 2px; /* Visual alignment with first line of value */
  }

  .spec-value {
    font-size: var(--gs-text-sm);
    color: var(--gs-text-primary);
    font-weight: 600;
    text-align: right; /* Align value to the right */
    line-height: 1.4;
  }

  /* Responsive: Larger capacity on desktop */
  @media (min-width: 768px) {
    .capacity-value {
      font-size: 3rem;
    }
  }
</style>
