---
import { t, type TranslationKey } from "src/utils/i18n-helpers";
import SectionHeader from "./SectionHeader.astro";

interface Props {
  lang: "bg" | "en";
}

const { lang } = Astro.props;

const tr = (key: string) => t(`services.whyUs.${key}` as TranslationKey, lang);

const reasons = [
  'specialized',
  'machinery',
  'agility',
  'quality',
  'partnership'
];
---

<section id="why-us">
    <div class="cs-container">
        <div class="cs-content">
            <SectionHeader
                label=""
                title={tr("title")}
                description=""
                align="left"
            />
            
            <ul class="cs-list">
                {reasons.map((r) => (
                    <li class="cs-item">
                        <span class="cs-check">âœ“</span>
                        <div class="cs-item-content">
                            <strong class="cs-strong">{tr(`list.${r}.title`)}</strong>
                            <p class="cs-text">{tr(`list.${r}.desc`)}</p>
                        </div>
                    </li>
                ))}
            </ul>
        </div>
        <!-- Maybe an image here later -->
    </div>
</section>

<style lang="less">
    #why-us {
        padding: var(--gs-section-padding);
        background-color: var(--gs-institutional-green);
        color: #fff;
    }

    .cs-container {
        width: 100%;
        max-width: (1280/16rem);
        margin: auto;
    }

    .cs-list {
        margin: var(--gs-space-6) 0 0 0;
        padding: 0;
        list-style: none;
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--gs-space-6);

        @media only screen and (min-width: 48rem) {
            grid-template-columns: 1fr 1fr;
        }
    }

    .cs-item {
        display: flex;
        gap: var(--gs-space-4);
        align-items: flex-start;
    }

    .cs-check {
        font-size: 1.5rem;
        font-weight: bold;
        color: var(--gs-success-emerald);
        background: rgba(255,255,255,0.1);
        width: 32px;
        height: 32px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        flex-shrink: 0;
    }

    .cs-strong {
        display: block;
        font-size: var(--gs-text-h5);
        margin-bottom: var(--gs-space-1);
        color: #fff;
    }

    .cs-text {
        font-size: var(--gs-text-base);
        color: rgba(255, 255, 255, 0.8);
        line-height: var(--gs-leading-relaxed);
        margin: 0;
    }
    
    /* Override SectionHeader Title Color for Dark Background */
    :global(#why-us .cs-title) {
        color: #fff !important;
    }
</style>
