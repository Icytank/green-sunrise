---

import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import MachineryCard from "../../components/MachineryCard.astro";
import ServiceList from "../../components/ServiceList.astro";
import WhyWorkWithUs from "../../components/WhyWorkWithUs.astro";
import SectionHeader from "../../components/SectionHeader.astro";
import { t } from "../../utils/i18n-helpers";

export const prerender = true;
export async function getStaticPaths() {
  return [
    { params: { lang: "bg" } },
    { params: { lang: "en" } },
  ];
}

const { lang } = Astro.params;

// Query the machinery collection and filter by language (prefix of the ID)
const allMachinery = await getCollection("machinery", ({ id }) => {
  return id.startsWith(`${lang}/`);
});
---

<BaseLayout 
  lang={lang}
  title={t('services.pageTitle', lang as 'bg' | 'en')}
  description={t('services.pageDescription', lang as 'bg' | 'en')}
>
  <main class="services-page">
    <!-- 1. Services List -->
    <ServiceList lang={lang as "bg" | "en"} />

    <!-- 2. Machinery Section -->
    <section class="machinery-section">
      <div class="container">
        <SectionHeader
            label={t("machinery.machineryTitle", lang as 'bg' | 'en')}
            title={t("machinery.ourMachinery", lang as 'bg' | 'en')}
            description={t("machinery.machinerySubtitle", lang as 'bg' | 'en')}
            align="center"
        />

        <div class="machinery-grid">
          {allMachinery.map((machine) => {
            // Extract slug prioritized by custom_slug
            const slug = machine.data.custom_slug || machine.id.split("/").slice(1).join("/");
            return (
              <div class="machinery-wrapper">
                <MachineryCard
                  title={machine.data.title}
                  model={machine.data.model}
                  weight={machine.data.weight}
                  image={machine.data.heroImage}
                  slug={slug}
                  lang={lang as "bg" | "en"}
                  isOwned={machine.data.isOwned}
                />
              </div>
            );
          })}
        </div>
      </div>
    </section>

    <!-- 3. Why Work With Us -->
    <WhyWorkWithUs lang={lang as "bg" | "en"} />
  </main>
</BaseLayout>

<style>
  .services-page {
    /* padding handled by components now */
    background-color: var(--gs-executive-white);
    min-height: 100vh;
  }

  .machinery-section {
    padding: var(--gs-section-padding);
    background-color: #fff;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--gs-space-2);
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--gs-space-10);
  }

  .font-display {
    font-size: var(--gs-text-h1);
    color: var(--gs-institutional-green);
    margin-bottom: var(--gs-space-2);
    font-family: var(--gs-font-primary);
  }

  .subtitle {
    font-size: var(--gs-text-h5);
    color: var(--gs-slate-gray);
    max-width: 600px;
    margin: 0 auto;
  }

  .machinery-grid {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    text-align: center;
    gap: var(--gs-space-6);
  }

  .machinery-wrapper {
    width: 100%;
    max-width: 350px;
    flex: 1 1 320px;
  }
</style>
